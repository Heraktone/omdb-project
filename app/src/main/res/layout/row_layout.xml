<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="150dp"
    android:id="@+id/rowLayout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/title_list"
        android:layout_gravity="center_horizontal"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_above="@+id/directors"
        android:layout_toEndOf="@+id/imageView3" />

    <ImageView
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="110dp"
        android:layout_height="120dp"
        android:id="@+id/imageView3"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:text="Avec : "
        android:textSize="12sp"
        android:id="@+id/with"
        android:textColor="#d2000000"
        android:layout_below="@+id/directors"
        android:layout_toEndOf="@+id/imageView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Directors"
        android:textSize="12sp"
        android:id="@+id/directors"
        android:textColor="#000000"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/imageView3" />

    <TextView
        android:paddingTop="10dp"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Film "
        android:id="@+id/typeObject"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imageView3" />

    <TextView
        android:paddingTop="10dp"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(2016)"
        android:id="@+id/year"
        android:layout_alignTop="@+id/typeObject"
        android:layout_toEndOf="@+id/typeObject" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:text="Actors"
        android:textSize="12sp"
        android:id="@+id/actors"
        android:textColor="#d2000000"
        android:layout_alignTop="@+id/with"
        android:layout_toEndOf="@+id/with" />
</RelativeLayout>